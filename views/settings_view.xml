<odoo>

    <record id="res_config_nextcloud_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <h2 class="px-4">Nextcloud Integration</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane o_documents_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="o_form_label col-lg-3" for="nextcloud_url" string="Nextcloud URL"/>
                                    <field name="nextcloud_url"/>
                                </div>
                                <div class="row mt16">
                                    <label class="o_form_label col-lg-3" for="nextcloud_username"
                                           string="Nextcloud Username"/>
                                    <field name="nextcloud_username"/>
                                </div>
                                <div class="row mt16">
                                    <label class="o_form_label col-lg-3" for="nextcloud_password"
                                           string="Nextcloud Password"/>
                                    <field name="nextcloud_password" password="True"/>
                                </div>
                                <div class="row mt16">
                                    <label class="o_form_label col-lg-3" for="nextcloud_token"
                                           string="Nextcloud Token"/>
                                    <field name="nextcloud_token"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
