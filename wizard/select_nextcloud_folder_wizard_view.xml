<odoo>
    <record id="select_nextcloud_folder_wizard_view" model="ir.ui.view">
        <field name="name">select.nextcloud.folder.wizard.view</field>
        <field name="model">select.nextcloud.folder.wizard</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="quant_id" invisible="1"/>
                            <field name="virtual_location_id"/>
                        </group>
                        <group>
                            <field name="qty" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
